{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "lib": ["es7", "dom"],
    "typeRoots": ["./node_modules/@types"]
  }
}
